generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  participation Participation?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Participation {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String   @unique @db.ObjectId
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  domain                String
  linkedInUrl           String?
  githubUrl             String?
  
  streak                Int      @default(0)
  totalDaysCompleted    Int      @default(0)
  lastSubmissionDate    DateTime?
  
  isDisqualified        Boolean  @default(false)
  disqualificationReason String?
  
  submissions           Submission[]
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Submission {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  participationId String        @db.ObjectId
  participation   Participation @relation(fields: [participationId], references: [id], onDelete: Cascade)
  
  content         String
  socialLink      String?
  
  createdAt       DateTime      @default(now())
}
